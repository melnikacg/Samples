<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.melnikacg.instagramviewer">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".View.PhotosActivity"
            android:label="@string/popular_photos_caption"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".View.CommentsActivity"
            android:label="@string/comments_caption"
            android:parentActivityName=".View.PhotosActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".View.PhotosActivity" />
        </activity>

        <service
            android:name=".View.SampleSpiceService"
            android:exported="false" />
    </application>

</manifest>
